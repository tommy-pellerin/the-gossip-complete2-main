
<div class="container">
  <h1>City : <%= @city.name %></h1>
  <p>L'emsemble des utilisateurs et les pooootins associés à la ville : </p> 
  <% @city.users.each do |user| %> <%# gossips est un tableau d'objet ! %>
    <div class="flex-shrink-0 p-3">
        <h3 class="border-bottom my-3"><%=user.first_name  %></h3>
        <%user.gossips.each do |gossip| %>
        <ul class="list-unstyled ps-0">
          <li class="mb-1">
            <button class="btn btn-toggle d-inline-flex align-items-center rounded border-0 collapsed" data-bs-toggle="collapse" data-bs-target="#home-collapse" aria-expanded="false">
              <%= gossip.title %>
            </button>
            <div class="collapse" id="home-collapse">          
              <ul>
                <li>id : <%= gossip.id %></li>
                <li>cotent : <br/> <%= gossip.content %></li>
              </ul>
            </div>
          </li>     
          <li class="border-top my-3"></li>      
        </ul>
        <% end %>
      </div>
    <% end %> 
</div>
