
<h4>Commentaires : </h4>

<p class="container text-center">  
  <% @gossip.comments.each do |comment| %> <%# gossips est un tableau d'objet ! %>
      <ul>      
        <li><%=comment.user.first_name  %> : <%=comment.content  %> 
          <% if current_user == comment.user%>
            <%= link_to "Edit", edit_gossip_comment_path(@gossip.id,comment.id), class:"btn btn-primary"%>
            <%= link_to "Destroy", gossip_comment_path(@gossip.id,comment.id), data: {turbo: true,turbo_method: :delete,turbo_confirm: "Are you sure?"}, class:"btn btn-danger" %>
          <% end %>
        </li>           
      </ul>
  <% end %>   
</p>

